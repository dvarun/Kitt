<% if can? :read, Video %>
<div class="row">
 <div class="col-sg-12 col-md-12">
  <div class="col-md-6">
   <h3>List of Videos</h3>
   <hr/>
   <% if !@video.empty? %>
   <% for video in @video %>
   <div class="panel panel-default">
    <div class="panel-body">
     <%= link_to "#{video.name}", video_path(video.id) %>
    </div>
   </div>
   <% end %>
   <% else %>
   No Video Available!
   <% end %>
  </div>
 </div>
</div>
<% else %>
<div class="row">
 <div class="col-sg-12 col-md-12">
  Sorry you're not allowed to access
 </div>
</div>
<% end %>
