<div class="row">
 <div class="col-sg-12 col-md-9">
  <h3> <%= @batch.name %> </h3>
  <hr/>
  <div class="well">
   <p><b>Description:</b> <%= @batch.description %> | <b>Start Date:</b> <%= @batch.start_date %></p>
  </div>
  <div class="well">
   <% if !@batch.users.empty? %>
   <table class="table">
    <tr>
     <th>Name</th>
     <th colspan="2">Actions</th>
    </tr>
    <% for user in @batch.users %>
    <tr>
     <td><%= user.firstname + " " + user.lastname %> </td>
     <td><%=link_to "Delete", batch_user_path(user.id), method: :delete, data:{confirm: "Are you sure to delete"}  %></td>
    </tr>
    <% end %>
   </table>
   <% else %>
   <p> No User found </p>
   <% end %>

  </div>
  <div class="row">
   <%= form_for(@batch) do |f| %>

   <div class="col-sg-3 col-md-3">
    <%= f.hidden_field :batch_id, :value => @batch.id %>
    <%= f.submit "Add Users",:class => 'btn btn-primary' %>
   </div>

   <div class="col-sg-9 col-md-9">
    <table class="table table-bordered">
     <tr>
      <th>Name</th>
      <th>Add</th>
     </tr>
     <% for user in @users %>
     <tr>
      <td> <%= user.firstname + " " + user.lastname %></td>
      <td> <%= check_box_tag 'batch[user_ids][]', user.id, @batch.user_ids.include?(user), :id => dom_id(user) %>
       <%#= label_tag dom_id(user), user.firstname %>
      </td>
     </tr>
     <% end %>
    </table>
    <% end %>

   </div>
  </div>
  <div class="row">
   <div class="col-sg-12 col-md-12">
    <%= form_for(@video, :html => {:multipart => true})  do |f| %>
    <% if @video.errors.any? %>
    <div class="alert alert-danger">
     <h3> Errors from saving the <%= @video.class %> </h3>
     <ul>
      <% for msg in @video.errors.full_messages %>
      <li> <%= msg %></li>
      <% end %>
     </ul>
    </div>
    <% end %>

    <div class="form-group">
     <label>Upload a Video </label>
     <%= f.hidden_field :batch_id,:value => @batch.id %>
    </div>
    <div class="form-group">
     <label> Name: </label>
     <%= f.text_field :name %>
    </div>
    <div class="form-group">
     <%= f.file_field :content %>
    </div>

    <div class="form-group">
     <label> Or Chooe Url: </label>
     <%= f.text_field :file_path %>
    </div>
    <div class="form-group">
     <%= f.submit "Submit",:class => 'btn btn-success' %>
    </div>
   </div>
   <% end %>
  </div>
 </div>

 <!-- this is side bar area -->
 <div class="col-sg-12 col-md-3">
  <h3> Videos </h3>
  <% for video in @videos %>
  <% if video.content? %>
  <%= video.content.url %>
  <% else %>
  <%= video.file_path %>
  <% end %>
  <br/>
  <hr/>
  <% end %>
 </div>
</div>
