<%= javascript_tag do %>
jQuery(function($){
    //all jQuery code which uses $ should be here.
      $("#batch_start_date").datepicker();
});

<% end %>
<div class="row">
 <div class="col-md-12">
  <%= form_for @batch,html: {:class => 'form-horizontal'} do |f| %>
  <% if @batch.errors.any? %>

  <div class="alert alert-danger">
   <h3> Errors from saving the <%= @batch.class %> </h3>
   <ul>
    <% for msg in @batch.errors.full_messages %>
    <li> <%= msg %></li>
    <% end %>
   </ul>
  </div>

  <% end %>
  <div class="form-group">
   <label class="col-lg-1 control-label">Name: </label>
   <div class="col-lg-4">
    <%= f.text_field :name,class: "form-control" %>
   </div>
  </div>

  <div class="form-group">
   <label class="col-lg-1 control-label">Description: </label>
   <div class="col-lg-4">
    <%= f.text_area :description,cols: 40, rows: 4,class: "form-control" %>
   </div>
  </div>

  <div class="form-group">
   <label class="col-lg-1 control-label">Start Date </label>
   <div class="col-lg-4">
    <%#= f.date_select :start_date, order: [:day, :month, :year], include_blank: true, start_year: Date.today.year,:class => "from-control" %>
    <%#= f.date_select :start_date, { :order => [:day, :month, :year], :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year'} }, {:class => "form-control"} %>
    <%= f.date_field :start_date,class: "form-control" %>
   </div>
  </div>

  <div class="form-group">
   <label class="col-lg-1 control-label">Completed?</label>
   <div class="col-lg-4">
    <%= f.check_box :is_complete,{:class => "from-control"},true,false %>
   </div>
  </div>

  <div class="form-group">
   <div class="col-lg-1">
    <%= f.submit nil, :class => 'btn btn-primary' %>
   </div>
  </div>
  <% end %>
 </div>
</div>
<br/>
