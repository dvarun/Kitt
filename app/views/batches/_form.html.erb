<%= form_for(@batch) do |f| %>

<% if @batch.errors.any? %>
 <div class="alert alert-danger">
   <h3> Errors from saving the <%= @batch.class %> </h3>
      <ul>
         <% for msg in @batch.errors.full_messages %>
            <li> <%= msg %></li>
         <% end %>
     </ul>
</div>
<% end %>



<label>Name: </label>
<%= f.text_field :name %>
<br />

<label>Description </label>
<%= f.text_area :description,cols: 40, rows: 4 %>
<br />

<label>Start Date </label>
<%= f.date_select :start_date, order: [:day, :month, :year], include_blank: true, start_year: Date.today.year%>
<br />

<%= f.submit %>

<% end %>
