<div class="row">
 <div class="col-md-9">
  <div class="row">
   <div class="col-md-12">
    <%#= image_tag @video.content.url %>
    <h3><%= @video.name %></h3>
    <video width="100%" height="100%" controls>
     <source src="<%= @video.content.url %>" type="video/mp4">
      Your browser does not support the video tag.
     </video>

    </div>
   </div>
   <hr/>
   <div class="row">
    <div class="col-md-12">

     <%= form_for (@comment) do |f| %>
     <%=f.hidden_field :video_id,:value => @video.id %>
     <%=f.hidden_field :user_id,:value => current_user.id %>
     <div class="form-group">
      <label>Comment:</label><br/>
      <%= f.text_area :description%>
     </div>
     <div class="form-group">
      <%= f.submit "Submit",:class => 'btn btn-primary' %>
     </div>
     <% end %>
    </div>
   </div>
   <hr/>
   <div class="row">
    <div class="col-md-12">
     <% if @comments.nil? %>
     <center> No comment found </center>
     <% else %>
     <% for comment in @comments %>
     <b><%= comment.user.firstname + " " + comment.user.lastname %></b><br/>
     <blockquote><%= comment.description %></blockquote>
     <hr/>
     <% end %>
     <% end %>
    </div>
   </div>
   <br/><br/>
  </div>


  <!-- this is side bar area -->
  <div class="col-sg-12 col-md-3">
   <div class="col-md-12">
    <h3> Videos </h3>
    <% for video in @videos %>
    <% if video.content? %>
    <%= link_to "#{video.name}", video_path(video.id) %>
    <%#= video.content.url %>
    <% else %>
    <%= link_to "#{video.name}", video_path(video.id) %>
    <%#= video.file_path %>
    <% end %>
    <br/>
    <hr/>
    <% end %>
   </div>
  </div>
 </div>
