<%= javascript_tag do %>
$(document).ready(function(){
 $('#tbl-user').DataTable();
});
<% end %>
<div class="row">
 <div class="col-sg-12 col-md-12">
  <h3> User List</h3>
  <hr/>
 </div>
</div>
<div class="row">
 <div class="col-sg-12 col-md-12">
  <table class="table table-bordered" id="tbl-user">
   <thead>
    <tr>
     <th>Full Name</th>
     <th>Email</th>
     <th>Role</th>
     <th>Actions</th>
     <th></th>
    </tr>
   </thead>
   <tbody>
    <% for user in @users %>
    <tr>
     <td><%= user.firstname + " " + user.lastname %></td>
     <td><%= user.email %></td>
     <td><%= link_to "Show" ,user_path(user.id)%></td>
     <td><%= link_to "Edit", edit_user_path(user.id) %></td>
     <td><%= link_to "Delete",user_path(user.id), method: :delete, data:{confirm: "Are you sure to delete this user?"}  %></td>
    </tr>
    <% end %>
   </tbody>
  </table>
  <%= link_to "Add User", new_user_path, class:"btn btn-primary" %>
 </div>
</div>
